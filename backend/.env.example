# Server Configuration
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=

# Googleapis
GOOGLEAPIS_URL=

# YouTube OAuth2 Credentials
# Get these from: https://console.cloud.google.com/apis/credentials
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=

# OAuth2 Redirect URI
# Must match the one configured in Google Cloud Console
OAUTH_REDIRECT_URI=http://localhost:3001/api/auth/google/callback

# Optional: Expected YouTube account email (for validation during setup)
YOUTUBE_ACCOUNT_EMAIL=

# Download Configuration
DOWNLOAD_PATH=./downloads

# ZIP Configuration
# Set to 'true' to automatically delete downloaded video files after generating ZIP
# This helps save disk space but means you can't re-download the ZIP without downloading videos again
CLEANUP_AFTER_ZIP=false

# Optional: Max video resolution (default: 720p)
MAX_VIDEO_HEIGHT=720
